<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

  <bean class="org.ums.cache.LocalCacheManager" id="localCache"/>

  <bean class="org.ums.cache.MemcacheClientManager" id="memCachedClientManager">
    <property name="objectCacheUrl" value="${object.cache.url}"/>
    <property name="objectCachePort" value="${object.cache.port}"/>
    <property name="lastModifiedCacheUrl" value="${lastmodified.cache.url}"/>
    <property name="lastModifiedCachePort" value="${lastmodified.cache.port}"/>
  </bean>

  <bean class="org.ums.cache.CacheFactoryImpl" id="cacheFactory">
    <property name="cacheManager" ref="${app.cache.type}"/>
  </bean>
</beans>